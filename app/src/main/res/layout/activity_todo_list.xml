<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/todoListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/tododeets"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/editTextTask"
        android:layout_below="@id/todoListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="What do you need to do?" />

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/editTextTask"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/lightpink"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Add Task" />
    <Button
        android:id="@+id/buttonEditTask"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/buttonAddTask"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/lightorange"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Edit Task" />

    <Button
        android:id="@+id/buttonDeleteTask"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/buttonEditTask"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/skyblue"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Delete Task" />
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDeleteTask"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Back" />

    <ListView
        android:id="@+id/listViewTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@id/backButton"
        android:layout_marginTop="16dp" />

</RelativeLayout>
