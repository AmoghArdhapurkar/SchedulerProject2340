<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/examTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/examdeets"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextExamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examTitle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="Exam Name" />

    <EditText
        android:id="@+id/editTextExamDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextExamName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Exam Date  MM/DD/YYYY" />

    <EditText
        android:id="@+id/editTextExamTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextExamDate"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Exam Time" />

    <EditText
        android:id="@+id/editTextExamLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextExamTime"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Exam Location" />

    <Button
        android:id="@+id/buttonSaveExam"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/editTextExamLocation"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/lightpink"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Save Exam" />
    <Button
        android:id="@+id/buttonEditExam"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/buttonSaveExam"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/lightorange"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Edit Exam" />

    <Button
        android:id="@+id/buttonDeleteExam"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/buttonEditExam"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:backgroundTint="@color/skyblue"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Delete Exam" />
    <Button
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/editTextExamDate"
        android:layout_below="@id/buttonDeleteExam"
        android:layout_marginTop="20dp"
        android:text="Sort Exam Date" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDeleteExam"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Back" />



    <ListView
        android:id="@+id/listViewExams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:choiceMode="singleChoice"
        android:layout_marginTop="16dp" />



</RelativeLayout>